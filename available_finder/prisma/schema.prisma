generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model T_Student_STD {
  STD_id Int @id @default(autoincrement())
  STD_name String
  STD_surname String
  group T_Groups_GRP @relation(fields: [STD_REF_GRP], references: [GRP_gid], onDelete: Cascade)
  STD_REF_GRP Int
  
  T_Disponibilities_DSP T_Disponibilities_DSP[]
}

model T_Groups_GRP {
  GRP_gid Int @id @default(autoincrement())
  GRP_name String
  GRP_level Int

  T_Student_STD T_Student_STD[]
}

model T_Disponibilities_DSP {
  DSP_rid Int @id @default(autoincrement())
  student T_Student_STD @relation(fields: [DSP_REF_STD], references: [STD_id], onDelete: Cascade)
